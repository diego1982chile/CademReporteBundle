                color: '#89A54E',
				yAxis: 1,
                type: 'spline',
                data: [2300.0, 3100.9, 2000.5, 3490.5, 3889.2, 2198.5, 2500.2, 1612.5, 3332.3, 845.3, 1753.9, 3798.6],
