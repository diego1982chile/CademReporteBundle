{% for item in variables_clientes %}
{{"var i_"~item.variable.nombre~";"}}
{% endfor %}
var i_cobertura;
var evo_quiebre_precio;
var evo_cobertura;

$(document).ready(function () {

	evo_quiebre_precio = new Highcharts.Chart({
