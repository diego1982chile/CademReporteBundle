{% extends '::base.html.twig' %}

{% block title %}Cadem Reporte{% endblock %}

{% block filtro %}
	<form id="filtros" action="" method="post" >
		{% for form in forms %}
				{{ form_widget(form) }}
		{% endfor %}
		<input class="btn btn-primary" type="submit" value="Filtrar" />
	</form>
{% endblock %}

{% block body %}
    <div class="span9">
		<div class="container-fluid well" style="padding-top:0">
			<h4>Detalle Quiebre</h4>
				<div class="hero-unit" style="padding:15px;margin-bottom:20px">
					<div class="row-fluid">
							<table id="tabla_resumen" class="table table-bordered display">                      
								<thead style='position:static'>
									<tr>
										{% for item in tabla_resumen.head %}
										<th title="{{ item }}">
											{% if loop.index>2 %}
												{{item|replace({' ':'_'})[0:20]}}...
											{% else %}	
												{{item}}
											{% endif %}		
										</th>
										{% endfor %}
									</tr>
								</thead>
								<tbody>
									{% for item in tabla_resumen.body %}
										{% set acum = 0 %}
										<tr class='{{item['categoria']|trim}} head' data-tt-id="{{loop.index}}" data-tt-parent-id="{{item['categoria']}}">
											{% for item2 in item %}
											{% set color='' %}
											{% if loop.index>2 %}
												{% if item2==0 %}
													{% set color='#FE2E2E' %}
												{% elseif item2==1%}
													{% set color='#82FA58' %}
												{% else %}
													{% set color='#8181F7' %}
												{% endif %}
											{% endif %}	
											<td id_col="{{loop.index-1}}" id_fil="{{loop.parent.loop.index-1}}" class='{{item['categoria']|trim}}' style='background-color:{{color}}'" title="{{item['SKU']}}">  

												{% if item2|replace({' ':'_'})|length>15 and loop.index==2 %}
													{{item2|replace({' ':'_'})[0:15]|upper}}...
												{% else %}
													{{item2|upper}}
												{% endif %}
	
											</td>
											{% set acum = acum + item2 %}
											{% endfor %}
										</tr>
									{% endfor %}
								</tbody>                        					                   
							</table>
					</div><!--/row-->   
				</div>
					<!--div class="hero-unit" style="padding:30px">
							<div class="row-fluid">
							{% for item in variables_clientes %}
								<div id="i_{{item.variable.nombre}}" ></div>
							{% endfor %}					
							</div>
					</div-->             
				</div><!--/span-->
			</div>
		</div>
{% endblock %}

