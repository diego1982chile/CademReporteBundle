{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}


<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
    <h2 class="form-signin-heading">Ingreso</h2>
	
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <!-- <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label> -->
    <input type="text" id="username" name="_username" class="input-block-level" placeholder="Email" required="required" />

    <!-- <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label> -->
    <input type="password" id="password" name="_password" required="required" placeholder="ContraseÃ±a" />

	<label class="checkbox">
	  <input name="_remember_me" type="checkbox" value="remember-me"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
	</label>

	<button name="_submit" class="btn btn-large btn-primary" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
	{% if error %}
    <div class="alert alert-error" style="margin-top: 20px;margin-bottom:0">{{ error|trans({}, 'FOSUserBundle') }}</div>
	{% endif %}
</form>
{% endblock fos_user_content %}